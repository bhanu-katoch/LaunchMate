<%- include('partials/header') %>

<div class="card" style="max-width: 520px; margin: 28px auto">
  <h2 style="margin-top: 0">Create your account</h2>
  <p style="color: var(--muted); margin-bottom: 12px">
    Start using LaunchMate: sign up for the demo.
  </p>
  <form id="signup-form">
    <label
      >Username
      <input type="text" name="username" id="username" required />
    </label>
    <label
      >Email
      <input type="email" name="email" id="email" required />
    </label>
    <label
      >Password
      <input type="password" name="password" id="password" required />
    </label>

    <div class="form-actions">
      <button class="btn">Sign up</button>
      <a href="/login" class="btn ghost small">Already have an account?</a>
    </div>
  </form>

  <div id="signup-result" style="margin-top: 12px; color: var(--muted)"></div>
</div>

<%- include('partials/footer') %>
