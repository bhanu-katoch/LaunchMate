<%- include('partials/header') %>

<div class="card" style="max-width: 520px; margin: 28px auto">
  <h2 style="margin-top: 0">Welcome back</h2>
  <p style="color: var(--muted); margin-bottom: 12px">
    Log in to continue to LaunchMate.
  </p>
  <form id="login-form">
    <label
      >Email
      <input type="email" name="email" id="email" required />
    </label>
    <label
      >Password
      <input type="password" name="password" id="password" required />
    </label>

    <div class="form-actions">
      <button class="btn">Login</button>
      <a href="/signup" class="btn ghost small">Create account</a>
    </div>
  </form>

  <div id="login-result" style="margin-top: 12px; color: var(--muted)"></div>
</div>

<%- include('partials/footer') %>
